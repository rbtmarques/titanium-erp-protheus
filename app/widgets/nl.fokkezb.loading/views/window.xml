<Alloy>
	<Window id="loadingMask" class="loadingMask" onOpen="onOpen" onClose="onClose" onClick="cancel">
		<View id="loadingOuter" class="loadingOuter">
			<View id="loadingInner" class="loadingInner">
				<View id="loadingSpinner" class="loadingSpinner">
					<ActivityIndicator id="loadingIndicator" class="loadingIndicator" />
				</View>
				<Label id="loadingMessage" class="loadingMessage" />
			</View>
		</View>
	</Window>
	<ImageView id="loadingImages" class="loadingImages" />
</Alloy>