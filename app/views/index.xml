<Alloy>
	
    <Window id="indexWin" class="container">
		<View id="top">
			<!-- <Label class="screentitle">Select one of the following options</Label> -->
			<ImageView id="logo" image="/logo_ng1.png" />
		</View>
        <View id="center">
            <View id="logincnt">
                <View id="userpass">
                    <TextField id="user" hintText="Email" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"/>
                    <TextField id="pass" hintText="Password" passwordMask="true" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"/>
                </View>
                
                
				<!-- <Label id="login" class="greenBtnLabel">Login</Label> -->
                
                <Button onClick="doLogin">Log In</Button>
                <Label id="signupLabel" class="link">You don't have an account? Sign up!</Label>
            </View>
        </View>
        <View id="bottom"></View>
    </Window>

    <!-- <Require type="widget" src="com.appcelerator.davidecassenti.modalwindow" id="modal" /> -->
</Alloy>